<script>
  
function UpdateClock(){
        const sechand=document.getElementsByClassName("sec");
    const hourshand=document.getElementsByClassName("hour");
    const minhand=document.getElementsByClassName("min");
    const datee=new Date();
  
    const minit=datee.getMinutes()*6;
      const hour=datee.getHours()* 30 + Math.round(minit/12);
    const sec=datee.getSeconds()*6;
    console.log(sec);
    sechand[0].style.transform=`rotate(${sec}deg)`;
     hourshand[0].style.transform=`rotate(${hour}deg)`;
     minhand[0].style.transform=`rotate(${minit}deg)`;
    
    
   setTimeout(UpdateClock,1000); 
}
  UpdateClock();  
</script>
